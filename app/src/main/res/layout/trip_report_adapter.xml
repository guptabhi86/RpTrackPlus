<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:blurkit="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardCornerRadius="5dp"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/parrentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/color_view"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:background="#727475"></View>

        <RelativeLayout
            android:id="@+id/rl_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/date_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="11-12-2020"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="0dp">

                                    <TextView
                                        android:id="@+id/address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:paddingEnd="@dimen/_5sdp"
                                        android:text="Noida, Sector 100"
                                        android:textAlignment="center"
                                        android:textSize="@dimen/_8sdp" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/start_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="25.8"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/title_txt_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="Start"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorGreen"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/_2sdp"
                                android:layout_height="match_parent"
                                android:background="#727475"></View>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="0dp">

                                    <TextView
                                        android:id="@+id/address_end"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:paddingEnd="@dimen/_5sdp"
                                        android:text="Noida, Sector 100"
                                        android:textAlignment="center"
                                        android:textSize="@dimen/_8sdp" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/end_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="25.8"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/title_txt_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="End"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorRed"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="#727475"></View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/avg_speed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="25.8"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/title_txt_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:text="AVG Speed"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorGreen"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/stoppage_duration"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="25.8"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/title_txt_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:text="Duration"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorGreen"
                                    android:textSize="@dimen/_9sdp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/max_speed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="25.8"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/title_txt_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:text="Max Speed"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorGreen"
                                    android:textSize="@dimen/_9sdp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/trip_distance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="25.8"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/title_txt_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:text="Distance"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorGreen"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>

