<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/rounded_rectangle_notification">
        <TextView
            android:id="@+id/txt_message_title"
            android:padding="@dimen/_5sdp"
            android:text="Create Geofence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/grey" />

        <EditText

            android:hint="Enter Name"
            android:layout_margin="@dimen/_12sdp"
            android:id="@+id/geofence_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/orange"
            android:layout_marginTop="@dimen/_7sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textColor="@color/grey"
                android:text="Cancel"
                android:layout_weight=".49"/>

            <RelativeLayout android:id="@+id/rl_seperator"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible"
                android:layout_weight=".02">

                <View android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

            </RelativeLayout>

            <TextView

                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textColor="@color/grey"
                android:text="Save"
                android:layout_weight=".49"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

