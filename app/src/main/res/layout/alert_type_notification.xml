<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_checked_change"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_white_grayd"
        android:clickable="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/tv_alert_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Start Time"
            android:textColor="#333333" />

        <ImageView
            android:padding="@dimen/_5sdp"
            android:id="@+id/iv_icon_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="08:08"
            android:src="@drawable/selector_check_uncheck"
            android:textColor="#8e8e8e" />
    </RelativeLayout>

    <include layout="@layout/view_line_common" />

</LinearLayout>